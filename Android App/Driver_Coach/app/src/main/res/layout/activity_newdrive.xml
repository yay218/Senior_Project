<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yiyang.driver_coach.Activity_newdrive">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_route1"
            android:hint="Route 1"
            android:textSize="50dp"
            android:layout_alignParentTop ="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_analyze"
            android:text="Collecting and analyzing driving data..."
            android:textSize="30dp"
            android:visibility="invisible"
            android:layout_below="@+id/text_route1"
            />

        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/chronometer"
            android:textSize="20dp"
            android:gravity="center"
            android:format="Time: %s"
            android:layout_below="@+id/text_analyze"/>

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Start Driving"
            android:id="@+id/btn_startStopDriving"
            android:checked="false"
            android:textOff="Start Driving"
            android:textOn="Stop Driving"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
